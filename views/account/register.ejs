<title><%- title %></title>
<h1><%= title %></h1>

<!-- Display flash messages if any -->
<%- messages() %>

<% if (errors) { %>
<ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <%  }) %>
</ul>
<% } %>

<div class="loginForm">
    <form action="/account/register" method="post">
        <label class="first" for="accountFirstname">First Name:</label>
        <input type="text" name="account_firstname" id="accountFirstname" required
            value="<%= locals.account_firstname %>">
        <label class="first" for="accountLastName">Last Name:</label>
        <input type="text" id="accountLastName" name="account_lastname" required value="<%= locals.account_lastname %>">
        <label class="first" for="accountEmail">Email Address:</label>
        <input type="email" id="accountEmail" name="account_email" required value="<%= locals.account_email %>"
            placeholder="Enter a valid email address">
        <label class="first" for="accountPassword">Password:</label>
        <input type="password" id="accountPassword" name="account_password" required
            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <div>
            <p>Passwords must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special
                character.
            </p>
        </div>

        <button class="register" type="submit">Register</button>
    </form>

</div>