<title><%- title %></title>
<h1><%= title %></h1>

<!-- Display flash messages if any -->
<%- messages() %>

<p>All field are requried</p>
<div class="loginForm">
    <form id="loginForm" action="/updateAccount" method="post">
        <label class="first" for="accountFirstname">First Name:</label>
        <input type="text" id="accountFirstname" name="account_firstname" required
            value="<%= locals.account_firstname %>">
        <label class="first" for="accountLastname">Last Name:</label>
        <input type="text" id="accountLastname" name="account_lastname" required value="<%= locals.account_lastname %>">
        <label class="first" for="accountEmail">Email Address:</label>
        <input type="text" name="accountEmail" required value="<%= locals.account_email %>">
        <input type="hidden" name="inv_id" <% if(locals.account_id) { %> value="<%= locals.account_id %>" <% } %>>
        <button class="register" type="submit">Submit</button>
    </form>
</div>
<br>
<div class="loginForm">
    <form action="/updatePassword" method="post">
        <input type="hidden" name="inv_id" <% if(locals.account_id) { %> value="<%= locals.account_id %>" <% } %>>

        <label class="first" for="newPassword">New Password:</label>
        <input type="password" id="newPassword" name="account_password" required value="<%= locals.account_password %>">
        <button class="register" type="submit">Submit</button>
    </form>

</div>